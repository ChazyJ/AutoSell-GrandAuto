<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#FF0000"
    android:stateListAnimator="@animator/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#191919"
        android:padding="10dp">

        <ImageView
            android:id="@+id/item_list_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            style="@style/CustomShapeableImageView"
            android:background="@drawable/placeholder_image" />

        <TextView
            android:id="@+id/item_list_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:paddingVertical="5dp" />

        <TextView
            android:id="@+id/item_list_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#EAEAEA"
            android:paddingVertical="5dp" />

        <TextView
            android:id="@+id/item_list_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:paddingVertical="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/item_list_button_admin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#ff0207"
            android:fontFamily="@font/inter_bold"
            android:textColor="#fff"
            android:text="Посмотреть" />

        <Button
            android:id="@+id/item_list_button_del"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#ff0207"
            android:fontFamily="@font/inter_bold"
            android:textColor="#fff"
            android:text="Удалить" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
